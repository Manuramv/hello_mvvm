<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/scoreFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score.ScoreFragment"
    >

    <TextView
        android:id="@+id/txtYourScorelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_your_score"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtGameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_between_views"
        android:textSize="@dimen/txt_header"

        app:layout_constraintTop_toBottomOf="@+id/txtYourScorelbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        />



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>